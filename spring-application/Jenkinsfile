#!groovy

pipeline {
  agent none
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.5.0'
        }
      }
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Docker Build spring-boot') {
      agent any
      steps {
        sh 'docker build -t demo-2:latest .'
      }
    }
    stage('Docker Build MYSQL') {
      agent any
      steps {
        sh 'docker build -f Dockerfile -t sql-demo-2 .'
      }
    }
  }
}
